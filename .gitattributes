# 自動テキスト正規化
* text=auto

# Windows で開く C# は CRLF
*.cs text eol=crlf
*.sln text eol=crlf
*.csproj text eol=crlf
*.props text eol=crlf
*.targets text eol=crlf

# フロントエンドは LF
*.js  text eol=lf
*.ts  text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md   text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf

# バイナリ
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.svg  text
*.ico  binary
*.dll  binary
*.exe  binary
*.pdb  binary
